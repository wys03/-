<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itranswarp.learnjava.student.mapper.ScoreMapper">

    <!-- 结果映射 -->
    <resultMap id="StudentScoreVOMap" type="com.itranswarp.learnjava.student.common.StudentScoreVO">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="student_id" property="studentId" jdbcType="INTEGER"/>
        <result column="student_name" property="studentName" jdbcType="VARCHAR"/>
        <result column="course_id" property="courseId" jdbcType="INTEGER"/>
        <result column="course_name" property="courseName" jdbcType="VARCHAR"/>
        <result column="score" property="score" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 基础查询字段 -->
    <sql id="selectScoreVO">
        SELECT
        s.id,
        s.student_id,
        stu.name AS student_name,
        s.course_id,
        c.course_name AS course_name,
        s.score
        FROM score s
        LEFT JOIN student stu ON s.student_id = stu.id
        LEFT JOIN course c ON s.course_id = c.id
    </sql>

    <!-- 根据学生ID查询成绩详情 -->
    <select id="selectScoreByStudentId" resultMap="StudentScoreVOMap">
        <include refid="selectScoreVO"/>
        WHERE s.student_id = #{studentId}
        ORDER BY s.id
    </select>

    <!-- 根据课程ID查询成绩详情 -->
    <select id="selectScoreByCourseId" resultMap="StudentScoreVOMap">
        <include refid="selectScoreVO"/>
        WHERE s.course_id = #{courseId}
        ORDER BY s.id
    </select>

    <!-- 分页查询学生成绩详情（带条件） -->
    <select id="selectScorePage" resultMap="StudentScoreVOMap">
        <include refid="selectScoreVO"/>
        <where>
            <if test="studentName != null and studentName != ''">
                AND stu.name LIKE CONCAT('%', #{studentName}, '%')
            </if>
            <if test="courseName != null and courseName != ''">
                AND c.course_name LIKE CONCAT('%', #{courseName}, '%')
            </if>
        </where>
        ORDER BY s.id
    </select>

</mapper>
